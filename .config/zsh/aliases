#     ---
#   aliases
#     ---

# common
alias sudo='sudo '

alias grep='grep --color=auto'
alias cp='cp -riv'
alias mv='mv -iv'
alias rm='rm -v'
alias mkd='mkdir -pv'

alias ls='ls --color=always'
alias l="ls -lFh"        # Size, type, human readable.
alias la="ls -lAFh"      # Long list, show almost all, type, human readable.
alias lr="ls -tRFh"      # Sort by date, recursive, type, human readable.
alias lt="ls -ltFh"      # Long list, sort by date, type, human readable.
alias ll="ls -l"         # Long list.
alias ldot="ls -ld .*"   # Dotfiles.
alias lS="ls -1FSsh"     # Show size, name. Sort by size.
alias lart="ls -1Fcart"  # All files, oldest first.
alias lrt="ls -1Fcrt"    # Oldest first.
alias ltree="ls -lFhR"   # Similar to 'l', but recursive.
alias latree="ls -lAFhR" # Similar to 'la', but recursive.

# programs
alias ir='irssi --home "$XDG_CONFIG_HOME"/irssi'
alias irssi='irssi --home "$XDG_CONFIG_HOME"/irssi'
alias nc='ncmpcpp 2>/dev/null'
alias ra='ranger'
alias nm='neomutt'
alias ab='abook -C "$XDG_CONFIG_HOME"/abook/abookrc --datafile "$XDG_CONFIG_HOME"/abook/addressbook'

# pacman
alias pac="sudo pacman -Syu"
alias pacins="sudo pacman -U"
alias pacre="sudo pacman -Rs"
alias pacrem="sudo pacman -Rns"
alias pacrep="pacman -Si"
alias pacreps="pacman -Ss"
alias pacloc="pacman -Qi"
alias paclocs="pacman -Qs"
alias pacinsd="sudo pacman -S --asdeps"
alias pacmir="sudo pacman -Syy"
alias paclsorphans="sudo pacman -Qdt"
alias pacrmorphans='sudo pacman -Rs $(pacman -Qtdq)'
alias pacfileupg="sudo pacman -Fy"
alias pacfiles="pacman -F"
alias pacls="pacman -Ql"
alias pacown="pacman -Qo"

# torrent
alias trl='transmission-remote -l'
alias tr-remote='transmission-remote'
alias tr-daemon='transmission-daemon'
alias tr-show='transmission-show'
alias tr-cli='transmission-cli'
alias tr-edit='transmission-edit'
alias tr-create='transmission-create'

# tmux
alias tm='tmux -f "$XDG_CONFIG_HOME"/tmux/tmux.conf'
alias tma='tmux a -t -f "$XDG_CONFIG_HOME"/tmux/tmux.conf'
alias tmk='tmux kill-session -t'
alias tmks='tmux kill-server'

# youtube-dl
alias yt='youtube-dl --add-metadata --embed-thumbnail --embed-subs --ignore-errors -o '%(upload_date)s-%(title)s.%(ext)s''
alias yta='youtube-dl --add-metadata --ignore-errors --extract-audio -f bestaudio/best --audio-format mp3 --audio-quality 0'

# head / tail shortcuts
alias -g H='| head'
alias -g T='| tail'
alias -g G='| grep'
alias -g L="| less"
alias -g LL="2>&1 | less"
alias -g NE="2> /dev/null"
alias -g NUL="> /dev/null 2>&1"

# find
alias fd='find . -type d   -iname'
alias ff='find . -type f,l -iname'
alias Fd='find . -type d   -name'
alias Ff='find . -type f,l -name'

mc() { mkdir -p "$1" && cd "$1"; }
calc() { echo "scale=5; $*" | bc; }

# convert colors
hextorgb() { printf "%d %d %d\n" "0x${1:0:2}" "0x${1:2:2}" "0x${1:4:2}"; }
rgbtohex() { printf "%02X%02X%02X\n" "$@"; }

# other
alias hc='history -c'
alias out='pkill -kill -u $(whoami)'
alias fuck='pkill -9'
alias installfont='sudo fc-cache -f -v'

alias a=aria2c
alias bat="bat --tabs 8"
alias j="jobs"
alias q=qalc
alias mpv="mpv --osd-fractions --fullscreen --loop"
alias calibre='calibre --no-update-check'

# vim: filetype=zsh
