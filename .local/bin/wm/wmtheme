#!/bin/sh

if [ -z "$1" ]; then
	exit 1
fi

THEME="$(printf '%s' "$1" | tr '[:lower:]' '[:upper:]')"

# save theme for future logins
WM_THEME_FILE="${XDG_CONFIG_HOME:-"$HOME/.config"}/wm_theme"
printf '%s' "$THEME" > "$WM_THEME_FILE"

xrdb -merge -D"$THEME"_THEME ~/.config/xrdb/Xdefaults
setsid dwmc xrdb &

killall dunst
setsid xdunst &
