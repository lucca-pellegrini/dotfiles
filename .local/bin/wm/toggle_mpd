#!/usr/bin/env bash

case "$(systemctl --user show mpd --property=ActiveState)" in
	"ActiveState=active")
		systemctl --user stop mpd
		;;
	"ActiveState=inactive")
		pkill dwmbar
		xsetroot -name "   Starting MPD   "
		systemctl --user start mpd & sleep 5
		dwmbar > /dev/null 2>&1 & disown
		;;
	*)
		exit 1
		;;
esac
