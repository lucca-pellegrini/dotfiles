#!/usr/bin/env bash

FONT="${FONT:-Source Code Pro Medium}"
SIZE="${SIZE:-9}"

params=$(getopt \
	-o f:,s: \
	-l font:,size: \
	-n "$0" -- "$@"
)
[ $? -ne 0 ] && exit 1
eval set -- "$params"

while :; do
	case "$1" in
	-f|--font)
		FONT="$2"
		shift 2
		;;
	-s|--size)
		SIZE="$2"
		shift 2
		;;
	--)
		shift
		break
		;;
	*)
		exit 1
		;;
	esac
done

st -g 120x36 -f "${FONT}:size=${SIZE}" $@ > /dev/null 2>&1 & disown
