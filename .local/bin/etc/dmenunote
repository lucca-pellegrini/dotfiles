#!/usr/bin/env sh

find_notes() {
	list="$HOME/.cache/notes.list"
	find . -type f >"$list"
	while read -r file; do
		[ -n "$notes" ] && notes="$notes\n${file#./}" || notes="${file#./}"
	done <"$list"
	rm "$list"
	[ -z "$notes" ] && exit
}

add_note() {
	title=$($DMENU -p "Title" <&- && echo)
	[ -z "$title" ] && exit
	$TERMINAL -e sh -c "$EDITOR $title"
}

remove_note() {
	find_notes
	title=$(printf "%b" "$notes" | $DMENU -p "Remove")
	[ -z "$title" ] && exit
	rm "$title"
}

edit_note() {
	find_notes
	title=$(printf "%b" "$notes" | $DMENU -p "Edit")
	[ -z "$title" ] && exit
	$TERMINAL -e sh -c "$EDITOR $title"
}

add_task() {
	task=$($DMENU -p "Enter new task" <&- && echo)
	[ -z "$task" ] && exit
	echo "$task" > "$tasks_list"
}

remove_task() {
	list=$(comm -23 "$tasks_list" "$task")
}

edit_task() {
	$TERMINAL -e sh -c "$EDITOR $tasks_list"
}

tasks() {
	tasks_list="$HOME/.local/share/tasks.list"
	options="add\nremove\nedit\n"
	choice=$(printf "%b" "$options" | $DMENU)
	case $choice in
	add) add_task ;;
	remove) remove_task ;;
	edit) edit_task ;;
	esac
}

dir="$HOME/.local/share/note/"
current_dir="$PWD"
mkdir -p "$dir"
cd "$dir" || exit

options="add\nremove\nedit\ntasks\n"
choice=$(printf "%b" "$options" | $DMENU)
case $choice in
add) add_note ;;
remove) remove_note ;;
edit) edit_note ;;
tasks) tasks ;;
esac

cd "$current_dir" || exit
