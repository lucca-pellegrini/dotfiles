aegis2cloak()
{
	[ ! -f "$1" ] && return 1
	awkprog='{ print("cloak add "$1" "$2) }'

	egrep 'issuer|secret' "$1" |
		sed -e 's/^.*".*": "//g' -e 's/",$//g' -e 's/ /\\\\ /g' |
		paste - - |

		while read line; do
			cmd=$(
				echo "$line" |
				awk -F '	' "$awkprog"
			)
			eval $cmd
		done

	return 0
}

usage()
{
	cat <<- _EOF
		Usage: `basename $0` FILE
		Where FILE is a valid aegis unencrypted json file
	_EOF
}

[ "$1" ] && [ ! "$2" ] || {
	usage >&2
	exit 1
}

case "$1" in
-h|--help)
	usage
	exit 1
	;;
*)
	aegis2cloak "$1"
	exit $?
	;;
esac
