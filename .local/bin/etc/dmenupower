#!/bin/sh

kill_xorg() {
	pid="$(
		lsof /tmp/.X11-unix/X"${DISPLAY#:}" |
		awk '/^Xorg/ { print $2 }'
	)"
	kill "$pid"
}

ANS="$(cat <<-\! | $DMENU -i -p ' System'
	 Lock
	 Exit
	 Suspend
	 Hibernate
	 Reboot
	 Shutdown
!
)"

case "$ANS" in
	' Lock') slock;;
	' Exit') kill_xorg;;
	' Suspend') slock & systemctl suspend;;
	' Hibernate') systemctl hibernate;;
	' Reboot') reboot;;
	' Shutdown') shutdown now;;
esac
