#!/bin/sh

reboot_to() {
	hyprlock & systemctl reboot --boot-loader-entry="$*"
}

ANS="$(cat <<-\! | $DMENU -i -p ' Power'
	 Lock
	 Exit
	 Suspend
	 Hibernate
	 Reboot
	 Reboot to Arch Netboot
	 Reboot to Windows
	 Reboot to Firmware
	 Shutdown
!
)"

case "$ANS" in
	' Lock') hyprlock;;
	' Exit') hyprctl dispatch exit;;
	' Suspend') hyprlock & systemctl suspend;;
	' Hibernate') hyprlock & systemctl hibernate;;
	' Reboot') reboot;;
	' Reboot to Arch Netboot') reboot_to arch_netboot;;
	' Reboot to Windows') reboot_to auto-windows;;
	' Reboot to Firmware') reboot_to auto-reboot-to-firmware-setup;;
	' Shutdown') shutdown now;;
esac
