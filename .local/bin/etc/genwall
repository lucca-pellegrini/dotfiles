#!/usr/bin/env bash
#  Generate a wallpaper with some static
read -r _ XY _ < <(xdpyinfo | grep 'dimensions:'); X=${XY%x*} Y=${XY#*x}

NAME="$(xdg-user-dir PICTURES)"/genwall-"$(date +%G-%m-%d_%s.png)"

convert -size "$X"x"$Y" canvas:"$1" -separate -seed 1000 \
    -attenuate 0.5 +noise Laplacian -combine -colorspace sRGB "$NAME"

hsetroot -fill "$NAME"
